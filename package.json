{
  "name": "freecodecamp-random-quote-machine",
  "version": "1.0.0",
  "description": "My solution to FreeCodeCamp's Random Quote Machine challenge",
  "scripts": {
    "format": "prettier --write ./**/*.{html,js,jsx,css}",
    "lint": "xo --fix",
    "test": "jest",
    "start": "NODE_ENV=development parcel index.html --open"
  },
  "keywords": [],
  "author": "Marcus Vinicius Monteiro de Souza",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "babel-jest": "^24.9.0",
    "babel-plugin-styled-components": "^1.10.6",
    "eslint-config-xo-react": "^0.20.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "serve": "^11.2.0",
    "xo": "^0.25.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-brands-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.7",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "regenerator-runtime": "^0.13.3",
    "styled-components": "^4.4.1"
  },
  "xo": {
    "extends": "xo-react",
    "envs": [
      "browser",
      "jest"
    ],
    "prettier": "true"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>src/setup-tests.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{html,css}": [
      "prettier --write",
      "git add"
    ],
    "./**/*.{js,jsx}": [
      "xo --fix",
      "prettier --write",
      "git add"
    ]
  }
}
